{
  "name": "lms",
  "version": "1.0.0",
  "description": "Leave Management System",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "dev-prod": "NODE_ENV=production node server.js",
    "server": "nodemon server.js --config nodemon.json",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build"
  },
  "author": "Arun Kumar",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^2.1.0",
    "csv-parse": "^5.3.0",
    "dayjs": "^1.11.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-fileupload": "^1.4.0",
    "express-validator": "^6.14.2",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.4",
    "mongoose": "^6.5.2",
    "multer": "^1.4.1",
    "node-xlsx": "^0.21.0",
    "nodemailer": "^6.7.8",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "shortid": "^2.2.16",
    "socket.io": "^4.5.1",
    "ua-parser-js": "^1.0.2",
    "underscore": "^1.13.4"
  },
  "devDependencies": {
    "concurrently": "^7.3.0",
    "nodemon": "^2.0.19",
    "npm-check-updates": "^16.0.5"
  },
  "engines": {
    "node": "16.16.0"
  }
}
